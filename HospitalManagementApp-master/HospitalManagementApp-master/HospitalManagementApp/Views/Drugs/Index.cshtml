@model ICollection<HospitalManagementApp.Models.Drugs>

    @{
    ViewData["Title"] = "Index";
    }

    <h1>Drugs Management</h1>

    <p>
        <a asp-action="Add">Add new drugs</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Expiry)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().HisUse)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Status)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Expiry)
                </td>
                <td>
                    @Html.DisplayFor(model => item.HisUse)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Status)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>

    </table>
