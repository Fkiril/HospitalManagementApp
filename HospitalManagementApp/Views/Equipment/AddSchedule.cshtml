@model HospitalManagementApp.Models.Equipment

@{
    ViewData["Title"] = "Add";
}
 
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSchedule" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.History" value="Identify" class="control-label"></label>
                <input asp-for="@Model.History" class="form-control" />
                <span asp-validation-for="@Model.History" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}