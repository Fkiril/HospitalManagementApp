@model HospitalManagementApp.Models.Equipment

@{
    ViewData["Title"] = "AddSchedule";
}

<h1>Add equipment's schedule</h1>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSchedule" method="post">
            <div class="form-group">
                <label asp-for="newSchedule">New Schedule:</label>
                <input asp-for="newSchedule"/>
                <span asp-validation-for="newSchedule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}