@model HospitalManagementApp.Models.Equipment
@{
    ViewData["Title"] = "Equipment Schedule";
}

<h3>Add a new equipment's schedule</h3>
<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSchedule" method="post" asp-route-equipmentId="@ViewBag.EquipmentId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Id" class="control-label"></label>
                <input asp-for="@Model.Id" class="form-control" />
                <span asp-validation-for="@Model.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div> 

<div>
    <a asp-action="Index" asp-route-id="@ViewBag.patientId">Back to menu</a>
</div>