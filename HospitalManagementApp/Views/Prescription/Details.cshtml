@model HospitalManagementApp.Models.Prescription

@{
    ViewData["Title"] = "Detail";
}
<div>
    <h1>Detail of Drug</h1>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IdOfPatient)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdOfPatient)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Drug)
        </dt>

        <dd>
            @if(Model.Drug != null && Model.Drug.Count > 0)
            {
                <div style="margin-left: 20px;">
                    @foreach(DrugInfo dr in Model.Drug)
                    {
                        <div>
                            <span style="font-style: bold;">Name Drug: @dr.NameOfDrug</span> |
                            <span>Quantity: @dr.Quantity</span>
                        </div>
                    }
                </div>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>


    </dl>
</div>



<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
