    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Staff</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HealthCareStaff)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HealthCareStaff)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Degree)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Degree)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SpecialList)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SpecialList)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkSchedule)
        </dt>
        <dd class="col-sm-10">
            <a asp-action="Calendar" asp-route-id=@Html.ValueFor(model => model.Id)>Calendar</a>
        </dd>
        
        @if (Model.HealthCareStaff != HealthCareStaff.SupportStaff)
        {
            <dt class="col-sm-2">
                Show Patient
            </dt>

            <dd class="col-sm-10">
                <a asp-action="ShowPatientList" asp-controller="Patient" asp-route-id="@Model.Id">Show Patient</a>
            </dd>
        }
        else
        {
            <dt class="col-sm-2">
                Management
            </dt>

            <dd class="col-sm-10">
                <a asp-action="Index" asp-controller="Equipment">Equipment Management</a>
                <a asp-action="Index" asp-controller="Drugs">Drugs Management</a>
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
